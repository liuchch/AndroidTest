<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开miui省电管理"
        android:onClick="on1Clicked"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开SmartScollViewActivity"
        android:onClick="on2Clicked"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求ipip.net"
        android:onClick="onRequestIpClicked"
        />
    <Button
        android:id="@+id/bt_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="表盘"
        />

    <com.example.liu.myapplication.view.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewTextView"
        />

    <com.example.liu.myapplication.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:leftBackground="@color/colorPrimaryDark"
        app:leftText="Back"
        app:leftTextColor="@color/colorAccent"
        app:rightText="go"
        app:rightTextColor="@color/colorPrimaryDark"
        app:rightBackground="@color/colorAccent"
        app:title="title"
        app:titleTextColor="@color/colorPrimary"
        app:titleTextSize="20dp"
        />


    <com.example.liu.myapplication.view.CircleProgressView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:SweepAngleValue="160"
        />

    <com.example.liu.myapplication.view.RectListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />


</LinearLayout>